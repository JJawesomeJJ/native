<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">
    <com.example.administrator.native_app.view.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/base_message"
        android:animateLayoutChanges="true">
        <TextView
            android:text="开始直播"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="选择直播类型"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/choose_type"
            android:layout_marginBottom="20dp">
            <GridView
                android:layout_width="wrap_content"
                android:id="@+id/list_view"
                android:layout_height="wrap_content"
                android:divider="@color/colorPrimaryDark"
                android:scrollbars="horizontal"
                android:numColumns="3"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/shape_orange">
            </GridView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/op_black"
            android:id="@+id/choose_picture_container"
            android:visibility="gone">
            <com.example.administrator.native_app.view.RoundImageView
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:id="@+id/choose_picture"
               app:radius="20dp"
               android:src="@drawable/lol"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="37dp">
            <com.example.administrator.native_app.view.buttom
                android:id="@+id/btn_cancel_high_opion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="取消"
                android:background="@drawable/shape_orange"
                android:textColor="@color/white"
                android:layout_weight="1"/>
            <com.example.administrator.native_app.view.buttom
                android:id="@+id/btn_agree_high_opion"
                android:layout_width="0dp"
                android:text="下一步"
                android:textColor="@color/white"
                android:background="@drawable/shape_blue"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </com.example.administrator.native_app.view.PercentLinearLayout>
</LinearLayout>